<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradation_background"

    tools:context=".MainActivity">

    <TextView
        android:id="@+id/appTitle"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="@string/app_name"
        android:gravity="center"
        android:textColor="@color/colorWhite"
        android:fontFamily="@font/amperzand"
        android:textSize="80sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="로그인함으로써 이용약관 및\n개인정보 취급방침에 동의합니다."
            android:textColor="@color/colorWhite"
            android:textAlignment="center" />

        <Button
            android:id="@+id/btnLoginKakao"
            android:layout_width="330dp"
            android:layout_height="60dp"
            android:layout_marginTop="14dp"
            android:background="@drawable/login_button"
            android:drawableLeft="@drawable/ic_kakao"
            android:paddingHorizontal="20dp"
            android:text="카카오 로그인"
            android:textColor="@color/colorWhite"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btnLoginFacebook"
            android:layout_width="330dp"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/login_button"
            android:drawableLeft="@drawable/login_ic_facebook"
            android:paddingHorizontal="17dp"
            android:text="페이스북 로그인"
            android:textColor="@color/colorWhite"
            android:textSize="18sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:textColor="#CED4DA"
            android:text="소셜 로그인 없이 회원가입으로 이용" />
    </LinearLayout>

</LinearLayout>